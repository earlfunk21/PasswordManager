<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.morax.passwordmanager.activity.SplashScreenActivity">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_app_name_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Password Manager"
        android:textAlignment="center"
        android:textColor="@color/raisinBlack"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by: Morax"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />
</LinearLayout>